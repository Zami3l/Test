#Image base
FROM alpine:edge

LABEL maintainer "Zamiel"

#Mise Ã  jour et installation de python3
RUN apk update && \
apk upgrade && \
apk add python3

#Declaration des arguments du docker-compose
ARG PORT
ARG FILE
ARG MODE

ENV FILE ${FILE}
ENV MODE ${MODE}

#Ouverture du port
EXPOSE $PORT

#Ajout du script
ADD $FILE /

#Lancement du script
CMD ["sh", "-c", "python3 ${FILE} ${MODE}"]